// user.email must be a string
isTrue(typeof user.email === 'string')

// user.email must contain 2 words separated by an @
isTrue(/^[\w+@\w+]+$/.test(user.email))

// You must have confirmed before you can create your user
isTrue(confirm)

// Let's compare from our previous user
const prevUser = store.get('user')

// You didn't change your name
isTrue(prevUser.name === user.name)

// user.password must be a string
isTrue(typeof user.password === 'string')

// user.password must be longer than 6
isTrue(user.password.length > 6)

// user.password must have at least a letter
isTrue(/[A-Za-z]/.test(user.password))

// user.password must have at least a number
isTrue(/[0-9]/.test(user.password))

// create the user
server.user.create(user)
